class Solution {
    String firstAlphabet(String S) {
        // code here
        String ans="";
        ans=ans+S.charAt(0);
        for(int i=1;i<S.length();i++)
        {
            if(S.charAt(i)==' ')
            {
                ans=ans+S.charAt(i+1);
            }
        }
        return ans;
    }
};
